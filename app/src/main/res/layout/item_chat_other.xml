<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_alignParentLeft="true"
            android:minWidth="100dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/ivChatTriangle"
                android:tint="@color/GREY"
                android:src="@drawable/ic_chat_triangle_other"
                android:layout_gravity="right"
                android:layout_marginTop="-5dp"
                android:layout_below="@+id/tvMessageText"
                android:layout_alignLeft="@+id/tvMessageText"
                android:layout_marginLeft="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat message sent other"
                android:id="@+id/tvMessageText"
                android:background="@drawable/ic_chat_body_other"
                android:textColor="@color/BLACK"
                android:backgroundTint="@color/GREY" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:id="@+id/tvMessageTimeStamp"
                android:layout_below="@+id/ivChatTriangle"
                android:textColor="@color/LIGHTGREY"
                android:layout_marginTop="-4dp"
                android:layout_toRightOf="@+id/ivChatTriangle" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>