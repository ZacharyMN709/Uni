<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:background="@color/PUREWHITE"
        android:layout_centerHorizontal="true"
        android:elevation="2dp"
        android:id="@+id/mainlayout"
        android:layout_margin="4dp">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/ivAdImage"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/CHATHOLDER"
            android:layout_toRightOf="@+id/ivAdImage"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--hr"
                android:id="@+id/tvTime"
                android:paddingBottom="1dp"
                android:textColor="@color/LIGHTGREY"
                android:gravity="center_vertical|right"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:id="@+id/tvUsername"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/GREY"
                android:layout_marginTop="-12dp"
                android:layout_alignParentLeft="false"
                android:layout_marginLeft="4dp"
                android:layout_alignBottom="@+id/profilepicturethumb"
                android:layout_toRightOf="@+id/profilepicturethumb"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Recent Message Recent Message Recent Message Recent Message"
                android:id="@+id/tvRecentMessage"
                android:layout_marginLeft="4dp"
                android:textColor="@color/LIGHTGREY"
                android:layout_below="@+id/tvUsername"
                android:paddingLeft="4dp"
                android:maxLines="3"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/profilepicturethumb"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/colorPrimary"
                android:layout_centerVertical="true"
                android:layout_margin="12dp"
                android:layout_alignParentTop="true" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/mainlayout"
        android:background="@color/SHADOW"
        android:id="@+id/rlDivider"></RelativeLayout>
</RelativeLayout>