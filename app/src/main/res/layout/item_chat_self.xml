<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/ivChatTriangle"
                android:tint="@color/colorAccent"
                android:src="@drawable/ic_chat_triangle_self"
                android:layout_gravity="right"
                android:layout_marginTop="-5dp"
                android:layout_below="@+id/tvMessageText"
                android:layout_alignRight="@+id/tvMessageText"
                android:layout_marginRight="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat message sent by user"
                android:id="@+id/tvMessageText"
                android:background="@drawable/ic_chat_body_self"
                android:textColor="@color/WHITE"
                android:backgroundTint="@color/colorAccent"
                android:layout_alignParentRight="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="--:--"
                android:id="@+id/tvMessageTimeStamp"
                android:layout_below="@+id/ivChatTriangle"
                android:textColor="@color/LIGHTGREY"
                android:layout_marginTop="-4dp"
                android:gravity="right"
                android:layout_toLeftOf="@+id/ivChatTriangle"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>